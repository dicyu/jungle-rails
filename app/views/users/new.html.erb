<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <div class="form-group">
    <%= label_tag :name, 'First Name' %>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name', required: true %>
  </div>

  <div class="form-group">
  <%= label_tag :name, 'Last Name' %>
  <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name', required: true %>
</div>

  <div class="form-group">
    <%= label_tag :email, 'Email' %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'test@test.com' %>
  </div>

  <div class="form-group">
    <%= label_tag :password, 'Password' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <%= label_tag :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
  </div>
  
  <%= f.submit "Submit" %>

<% end %>